@using BookVerse.Models;
@model User;

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Library</title>
    <link rel="stylesheet" href="/css/user-css/Library.css">
</head>
<body>
    <div class="header">
        <div class="search_box">
            <input type="text" placeholder="Search..">
            <i class='bx bx-search-alt-2'></i>
        </div>

        <div class="header-icons">
            <div class="account">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135768.png" alt="">
                <h4>@Model.Name</h4>
            </div>
        </div>
    </div>
    <div class="container">
        <nav>
            <ul>
                <li><a href="#">Popular</a></li>
                <li><a href="#">Classic</a></li>
                <li><a href="#">Romance</a></li>
                <li><a href="#">Horrors</a></li>
            </ul>
        </nav>
    </div>
    <section>
        <div class="content-container">
            <ul class="book-set">
                <li class="book-heading" data-category="Popular">Popular</li>
            </ul>
            <button id="nextButton" data-page="1">Next</button>

            <ul class="book-set">
                <li class="book-heading" category="Classic">Classic</li>
                <li class="book">Book 1</li>
                <li class="book">Book 2</li>
            </ul>
            <ul class="book-set">
                <li class="book-heading">Romance</li>
                <li class="book">Book 1</li>
                <li class="book">Book 2</li>
            </ul>
            <ul class="book-set">
                <li class="book-heading">Horrors</li>
                <li class="book">Book 1</li>
                <li class="book">Book 2</li>
            </ul>
        </div>
    </section>
    <script src="~/js/user-panel/Library.js" type="text/javascript"></script>
</body>
</html>
